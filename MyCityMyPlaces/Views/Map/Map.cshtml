@{
    ViewData["Title"] = "Map";
}
<head>
    <script
      src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap&libraries=&v=weekly"
      defer></script>
    <style type="text/css">
      /* Set the size of the div element that contains the map */
      #map {
        height: 400px;
        /* The height is 400 pixels */
        width: 100%;
        /* The width is the width of the web page */
      }
    </style>
    <script src="~/js/map.js"></script>
</head>
  <body>
    <h3>My Google Maps Demo</h3>
  <!--The div element for the map -->
  <div class="container">
    <div class="row">
      <div class="col">
        <div id="map"></div>
      </div>
      <div class="col-md-auto">
        <div>
          <button type="button" class="btn btn-success margin" onclick="addLocation()">Add to Favourite</button>
        </div>
        <div>
          <button type="button" class="btn btn-success margin" onclick="showLocations()">Show your Favourites</button>
        </div>
      </div>
    </div>
  </div>
  </body>
